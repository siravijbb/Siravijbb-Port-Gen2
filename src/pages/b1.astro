<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JSON Data Boxes</title>
    <style>
        .box {
            border: 1px solid #ccc;
            padding: 20px;
            margin: 10px;
        }

        img {
            max-width: 100%;
            height: auto;
        }
    </style>
</head>
<body>
    <div id="content">
        <div class="box"></div>
        <div class="box"></div>
        <div class="box"></div>
        <div class="box"></div>
        <div class="box"></div>
        <div class="box"></div>
    </div>

    <script>
        async function fetchData() {
            try {
                console.log('Fetching JSON data...');
                const response = await fetch('https://blog.siravijbb.me/data/latest/rayriffy.json');
                console.log('JSON data fetched successfully');
                
                const data = await response.json();
                console.log('JSON data parsed successfully');
                
                const boxes = document.querySelectorAll('.box');

                // Display only the newest 6 entries
                const newestEntries = data.slice(0, 6);
                console.log('Displaying newest entries:', newestEntries);

                newestEntries.forEach((item, index) => {
                    const box = boxes[index];
                    const banner = document.createElement('img');
                    banner.src = item.banner.url;
                    banner.width = item.banner.width;
                    banner.height = item.banner.height;

                    const title = document.createElement('h2');
                    title.textContent = item.title;

                    const subtitle = document.createElement('p');
                    subtitle.textContent = item.subtitle;

                    const date = document.createElement('p');
                    date.textContent = new Date(item.date).toLocaleString();

                    const featured = document.createElement('p');
                    featured.textContent = `Featured: ${item.featured}`;

                    const categories = document.createElement('p');
                    categories.textContent = `Categories: ${item.categories.join(', ')}`;

                    box.appendChild(banner);
                    box.appendChild(title);
                    box.appendChild(subtitle);
                    box.appendChild(date);
                    box.appendChild(featured);
                    box.appendChild(categories);
                });

                console.log('Content populated successfully');
            } catch (error) {
                console.error('Error:', error);
            }
        }

        fetchData();
    </script>
</body>
</html>
